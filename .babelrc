{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ]
    ],
    "plugins": [
        [
            "@babel/plugin-transform-runtime"
        ]
    ]
}

// targets.node: current -> instruct babel compile against the current node's version to use ES6+.
// @babel/plugin-transform-runtime - to avoid duplication across the compiled output.
